<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.laboratory.paper.mapper.RecycleBinMapper">
    <resultMap id="RecycleBinMap" type="com.laboratory.paper.entity.RecycleBin">
        <id column="id" property="id"/>
        <result column="paper_id" property="paperId"/>
        <result column="parent_id" property="parentId"/>
        <result column="delete_time" property="deleteTime" javaType="java.time.LocalDateTime"/>
        <result column="delete_user" property="deleteUser"/>
    </resultMap>

    <select id="queryRecycleBinByParentId" resultMap="RecycleBinMap">
        SELECT id, paper_id, parent_id, delete_time, delete_user FROM recycle_bin
        <where>
            parent_id = #{parentId}
        </where>
    </select>

    <select id="queryRecycleBinByIdFolderId" resultMap="RecycleBinMap">
        SELECT id, paper_id, parent_id, delete_time, delete_user FROM recycle_bin
        <where>
            paper_id = #{paperId} AND
            parent_id = #{parentId}
        </where>
    </select>

    <delete id="deleteByFolderId">
        DELETE FROM recycle_bin
        <where>
            parent_id = #{folderId}
        </where>
    </delete>

    <insert id="removeToRecycleBin">
        INSERT INTO recycle_bin(paper_id, parent_id, delete_time, delete_user)
        VALUES(
        #{paperId},
        #{parentId},
        NOW(),
        #{userId}
        )
    </insert>

    <delete id="deleteRecycleBinByPaperIdFolderId">
        DELETE FROM recycle_bin
        <where>
            paper_id = #{paperId} AND
            parent_id = #{folderId}
        </where>
    </delete>

    <select id="queryAllRecycleBinByIdFolderId" resultMap="RecycleBinMap">
        SELECT id, paper_id, parent_id, delete_time, delete_user FROM recycle_bin
        <where>
            <if test="paperIds != null and paperIds.size() > 0">
                paper_id IN
                <foreach collection="paperIds" item="paperId" open="(" close=")" separator=",">
                    #{paperId}
                </foreach>
            </if>

            <if test="paperIds != null and paperIds.size() > 0">
                AND
            </if>
            parent_id = #{parentId}
        </where>
    </select>

    <insert id="batchRemoveToRecycleBin">
        INSERT INTO recycle_bin(paper_id, parent_id, delete_time, delete_user)
        VALUES
        <foreach collection="paperIds" item="paperId" separator=",">
            (
            #{paperId},
            #{parentId},
            NOW(),
            #{userId}
            )
        </foreach>
    </insert>
</mapper>